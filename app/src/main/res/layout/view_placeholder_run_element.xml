<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/row_data_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/walking_icon_desc"
        android:paddingTop="10dp"
        android:src="@drawable/ic_walking_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/run_list_time_run"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="@id/row_data_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_data_iv"
        app:layout_constraintTop_toTopOf="@id/row_data_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/old_run_row_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/row_data_iv_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/walking_icon_desc"
        android:paddingTop="10dp"
        android:src="@drawable/ic_walking_icon"
        app:layout_constraintBottom_toBottomOf="@id/row_data_ll_rv"
        app:layout_constraintEnd_toStartOf="@id/row_data_ll_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/row_data_ll_rv" />

    <LinearLayout
        android:id="@+id/row_data_ll_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/old_run_row_ll">

        <TextView
            android:id="@+id/run_list_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/past_title"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/run_list_distance_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="@string/distance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/run_list_time_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        app:layout_constraintRight_toRightOf="@id/old_run_row_ll"
        app:layout_constraintBottom_toBottomOf="@id/old_run_row_ll"
        app:layout_constraintTop_toTopOf="@id/old_run_row_ll"
        />


</androidx.constraintlayout.widget.ConstraintLayout>